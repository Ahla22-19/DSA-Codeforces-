k = int(input())
for i in range(k):
    j = input()
    nums = [int(a) for a in input().split()]
    nums.sort()
    
    s = sum(nums)
    m = len(nums) // 2
    b = len(nums) * 2 * nums[m] + 1 - s


    if len(nums) <= 2:
        print(-1)
    elif b < 0:
        print(0)
    else:
        print(b)
    
